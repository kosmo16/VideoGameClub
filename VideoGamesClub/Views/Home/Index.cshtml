            </ul>
        
        </div>
        
        <div class="sidebar-right">
         
            <h2>Newsy:</h2>
                
            <table>
               
            @foreach (var item in Model) 
            {
                <tr>
                    <td>
                      <h3>@Html.DisplayFor(modelItem => item.HeadTitle)</h3>
                    </td>
                    <td>
                       <p> @Html.ActionLink("Expand", "Expand", new { id=item.Id }) </p>

                    </td>
                </tr>
                <tr><td>                        
                        @if(!item.isCollapsed) 
                        {
                         <h4>@Html.DisplayFor(modelItem => item.FullText)</h4>
                         <a href="@Html.DisplayFor(modelItem => item.Source)">Source</a>
                         <h5>Autor: @Html.DisplayFor(modelItem => item.Author)</h5>
                        }
                        @if(item.isCollapsed)
                        {
                            <h4>@Html.DisplayFor(modelItem => item.ShortText)</h4>
                        }

                    </td></tr>
            }

            </table>

         
        </div>

    </div>